<!doctype html>
<html lang="en-GB">
  <%= partial "partials/head" %>
  <body class="terminal">
    <%= component :navigation, :main_navigation %>
    <div class="container">
      <%= yield %>

      <%= component_button text: "Default", type: :default, html: { class: "extra-class", id: "sfdf" } %>
      <%= component_button text: "Primary", type: :primary %>
      <%= component_button text: "Error", type: :error %>
      <%= component_button text: "Default Ghost", type: :default, ghost: true %>
      <%= component_button text: "Primary Ghost", type: :primary, ghost: true %>
      <%= component_button text: "Error Ghost", type: :error, ghost: true %>
      <%= component_button text: "Default Ghost", type: :default, block: true %>
      <%= component_button text: "Primary Ghost", type: :primary, block: true %>
      <%= component_button text: "Error Ghost", type: :error, block: true %>

      <%= component :button, :group, nil do 
        [
          component_button(text: "Left", type: :default, ghost: true),
          component_button(text: "Middle", type: :default, ghost: true),
          component_button(text: "Right", type: :default, ghost: true)
        ].join("")
      end %>

      <%= component :navigation, :main_footer, nil %>
    </div>
  </body>
</html>
