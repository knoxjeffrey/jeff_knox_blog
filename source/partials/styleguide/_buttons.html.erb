<section>
  <header><h2 id="Buttons">Buttons</h2></header>
  <div class="flex-column flex-column--start">
    <%= component_button text: "Default", type: :default, html: { class: "margin-bottom--s" } %>
    <%= component_button text: "Primary", type: :primary, html: { class: "margin-bottom--s" } %>
    <%= component_button text: "Error", type: :error, html: { class: "margin-bottom--s" } %>
    <%= component_button text: "Default Ghost", type: :default, ghost: true, html: { class: "margin-bottom--s" } %>
    <%= component_button text: "Primary Ghost", type: :primary, ghost: true, html: { class: "margin-bottom--s" } %>
    <%= component_button text: "Error Ghost", type: :error, ghost: true, html: { class: "margin-bottom--s" } %>
    <%= component_button text: "Default Block", type: :default, block: true, html: { class: "margin-bottom--s" } %>
    <%= component_button text: "Default Ghost Block", type: :default, ghost: true, block: true, html: { class: "margin-bottom--l" } %>
  </div>

  <header><h2 id="Buttons">Button group</h2></header>
  <%= component :button, :group, nil do 
    [
      component_button(text: "Left", type: :default, ghost: true),
      component_button(text: "Middle", type: :default, ghost: true),
      component_button(text: "Right", type: :default, ghost: true)
    ].join("")
  end %>
</section>
